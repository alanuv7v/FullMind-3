  @import "global_variables"
  
  :global(*) {
    font-size: 14px;
    box-sizing: border-box;
    
  }
  :global(button) {
    
    font-size: 14px;
    background-color: dark;
    color: light;
    border: none;
    box-shadow: inset 0px 0px 0px 1px gray;

  }
  :global(button:hover) {
    box-shadow: inset 0px 0px 0px 1px light;
  }
  :global(button:active) {
    background-color: light;
    color: dark;
  }

  :global(.border) {
    //border: 1px solid light;
    box-shadow: inset 0px 0px 0px 1px light
    //box-shadow: inset 0px 0px 0px 1px yellow, inset 1px 0px 0px 1px blue;
  }

  :global(*:focus) {
    //outline: 1px solid light;
    outline: none
    box-shadow: inset 0px 0px 0px 1px light
  }

  #App {
    position: relative;
    height: 100vh;
    color: white;
    display: flex;
    flex-direction: column;
  }
  #content {
    margin: 10px;
    flex-grow: 1

    display: flex;
    justify-content: center;
    align-items: center

    overflow: hidden;
    position: relative
  }
  #content > * {
    border: 8px inset lightgray;
    height: 100%;
    padding: 10px;
    overflow: inherit;


  }
  #background {
    position: fixed;
    top: 0px;
    width: 100vw;
    height: 100vh;
    background-color: dark;
    z-index: -1;
    transition: none;
  }
  #keyboard_toolbar {
    position: sticky;
    top: 0px;
    left: 0px;
    background-color: deep;
    width: 100vw;
    height: 30px;
    display: flex;
    flex-direction: row;
    z-index: 4;
  }
  #command_palette {
    display: none;

    position: sticky;
    margin-top: 160px;
    background-color: rgba(54, 54, 54, 1);

    width: 75vw;
    height: fit-content;
    left: ((100-@width)/2);
    z-index: 4;

    textarea {
        width: 100%;
        height: fit-content;
        color: white;
        border: 1px solid transparent;
        background-color: transparent;
        resize: none;
        box-sizing: border-box;
        font-size: 16px !important;
        padding: 4px;
    }
  }

  
