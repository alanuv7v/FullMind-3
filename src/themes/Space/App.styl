  @import "global_variables"
    
  :global(button) {
    border: 0px solid transparent;
    box-shadow: inset 1px 1px 2px 0px rgba(0,0,0,0.5);
  }
  #App {
    position: relative;
    height: fit-content;
  }
  #content > * {
    border: 8px inset lightgray;
    height: 100%;
    padding: 10px;
    overflow: inherit;
  }
  #background {
    position: fixed;
    top: 0px;
    width: 100vw;
    height: 100vh;
    background-color: dark;
    z-index: -1;
    transition: none;
  }
  #keyboard_toolbar {
    position: fixed;
    top: 0px;
    left: 0px;
    background-color: gainsboro;
    width: 100vw;
    height: 30px;
    display: flex;
    flex-direction: row;
    z-index: 4;
  }
  #command_palette {
    display: none;

    position: fixed;
    margin-top: 160px;
    background-color: rgba(54, 54, 54, 1);

    width: 75vw;
    height: fit-content;
    left: ((100-@width)/2);
    z-index: 4;

    textarea {
        width: 100%;
        height: fit-content;
        color: white;
        border: 1px solid transparent;
        background-color: transparent;
        resize: none;
        box-sizing: border-box;
        font-size: 16px !important;
        padding: 4px;
    }
  }
  
